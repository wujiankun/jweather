<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_weather_aqi_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/common_page_horzien_margin"
    app:cardBackgroundColor="@color/colorBgPrimary"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="0dp">
    <!--空气质量信息-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/common_page_horzien_margin"
        android:text="空气质量"
        android:textColor="#fff"
        android:textSize="@dimen/common_text_size" />


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:layout_marginBottom="8dp"
        android:paddingLeft="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <com.wjk.jweather.view.CirclePanelView
                android:id="@+id/cp_api_panel"
                android:layout_width="90dp"
                android:layout_height="90dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="AQI"
                android:textSize="12sp"
                android:textColor="#fff" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.wjk.jweather.view.TawerView
                android:id="@+id/tv_pm25"
                android:layout_width="20dp"
                android:layout_height="90dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PM2.5"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                android:textColor="#fff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.wjk.jweather.view.TawerView
                android:id="@+id/tv_pm10"
                android:layout_width="20dp"
                android:layout_height="90dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PM10"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                android:textColor="#fff" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.wjk.jweather.view.TawerView
                android:id="@+id/tv_air_co"
                android:layout_width="20dp"
                android:layout_height="90dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CO"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                android:textColor="#fff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.wjk.jweather.view.TawerView
                android:id="@+id/tv_no2"
                android:layout_width="20dp"
                android:layout_height="90dp" />

            <com.wjk.jweather.view.WithSubTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NO2"
                android:layout_marginTop="5dp"
                android:textColor="#fff"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.wjk.jweather.view.TawerView
                android:id="@+id/tv_so2"
                android:layout_width="20dp"
                android:layout_height="90dp" />

            <com.wjk.jweather.view.WithSubTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SO2"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                android:textColor="#fff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.wjk.jweather.view.TawerView
                android:id="@+id/tv_o3"
                android:layout_width="20dp"
                android:layout_height="90dp" />

            <com.wjk.jweather.view.WithSubTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="O3"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                android:textColor="#fff" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>

