<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/common_page_horzien_margin"
    android:layout_marginRight="@dimen/common_page_horzien_margin"
    android:layout_marginTop="@dimen/common_page_horzien_margin"
    app:cardBackgroundColor="@color/colorBgPrimary"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="0dp">
    <!--空气质量信息-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/common_page_horzien_margin"
        android:text="空气质量信息"
        android:textColor="#fff"
        android:textSize="@dimen/common_text_size" />
    <LinearLayout
        android:layout_marginTop="30dp"
        android:id="@+id/ll_weather_aqi_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/common_page_horzien_margin">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_aqi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="aqi:115"
                android:textColor="#fff"
                android:textSize="@dimen/common_text_size" />
            <TextView
                android:id="@+id/tv_pm25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pm2.5:120"
                android:textColor="#fff"
                android:textSize="@dimen/common_text_size" />
            <TextView
                android:id="@+id/tv_pm10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pm10:102"
                android:textColor="#fff"
                android:textSize="@dimen/common_text_size" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_air_co"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="co:110"
                android:textColor="#fff"
                android:textSize="@dimen/common_text_size" />

            <TextView
                android:id="@+id/tv_so2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="so2:115"
                android:textColor="#fff"
                android:textSize="@dimen/common_text_size" />
            <TextView
                android:id="@+id/tv_o3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="o3:115"
                android:textColor="#fff"
                android:textSize="@dimen/common_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_no2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="no2:115"
                android:textColor="#fff"
                android:textSize="@dimen/common_text_size" />

            <TextView
                android:id="@+id/tv_air_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="主要污染物:115"
                android:textColor="#fff"
                android:textSize="@dimen/common_text_size" />
        </LinearLayout>

    </LinearLayout>
    </android.support.v7.widget.CardView>

