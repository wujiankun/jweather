<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/common_page_horzien_margin"
    android:layout_marginLeft="@dimen/common_page_horzien_margin"
    android:layout_marginRight="@dimen/common_page_horzien_margin"
    app:cardBackgroundColor="@color/colorBgPrimary"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="0dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ll_life_style_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">
        <!--生活建议信息-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_page_horzien_margin"
            android:layout_marginTop="@dimen/common_page_horzien_margin"
            android:text="生活建议"
            android:textColor="#fff"
            android:textSize="@dimen/common_text_size" />

        <TextView
            android:id="@+id/tv_air"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/common_page_horzien_margin"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/tv_drsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/common_page_horzien_margin"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/tv_flu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/common_page_horzien_margin"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/tv_trav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/common_page_horzien_margin"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/tv_comfort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/common_page_horzien_margin"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/tv_uv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/common_page_horzien_margin"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/tv_sport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/common_page_horzien_margin"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/tv_car_wash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/common_page_horzien_margin"
            android:textColor="#fff" />

    </LinearLayout>
</android.support.v7.widget.CardView>
